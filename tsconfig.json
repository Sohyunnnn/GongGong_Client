      "target": "esnext",
      "useDefineForClassFields": true,
      "lib": ["dom", "esnext"],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react-jsx",
      "typeRoots": ["types"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src", "custom.d.ts"]
  }
  